---
# YAML Lint Configuration for mcp-ai-agent-guidelines
# Enforces YAML best practices while being practical for development

extends: default

rules:
  # Line length - be practical for code examples and URLs
  line-length:
    max: 120
    level: warning

  # Allow duplicate keys in examples/demos
  key-duplicates:
    level: warning

  # Indentation - standard 2 spaces
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Comments - require space after #
  comments:
    min-spaces-from-content: 1

  # Document markers - optional
  document-start:
    present: false

  # Trailing spaces - handled by lefthook
  trailing-spaces:
    level: warning

  # Empty lines
  empty-lines:
    max: 2

  # Truthy values - allow yes/no, true/false, on/off
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
    check-keys: false

# Ignore patterns
ignore: |
  node_modules/
  dist/
  coverage/
  .git/
